<div class="container">
    <div class="row">
        <div class="col-md-12">
            <% if (messages.info) { %>
                <div class="alert alert-info" role="alert">
                    <%- messages.info %>
                </div>
            <% } %>
            <% if (messages.danger) { %>
                <div class="alert alert-danger" role="alert">
                    <%- messages.danger %>
                </div>
            <% } %>

            <%- content %>

        </div>
    </div>
</div>
