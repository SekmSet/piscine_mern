<% extend('../layout', {title: 'Piscine MERN J-3 - PROFIL'}) %>

<h2>PROFIL</h2>

Bonjour <%= user.login %>

<form action="#">
    <div class="form-group">
        <label  for="">Login</label>
        <input type="text" class="form-control"value="<%= user.login %>"  disabled>
    </div>

    <div class="form-group">
        <label for="">Email</label>
        <input type="text" class="form-control" value="<%= user.email %>" disabled>
    </div>

    <div class="form-group">
        <label for="">Admin</label>
        <input class="form-control" value="<%= user.admin %>" disabled type="text">
    </div>
</form>

<a class="btn btn-primary" href="/profil/edit">Editer mon profil</a>

<form method="post" action="/profil/delete">
    <input type="submit" class="btn btn-danger" value="Supprimer mon compte" >
</form>