<% extend('../layout', { title:'Piscine MERN J-2 - exo 7' }) %>

<h1>Ajouter un student</h1>

    <form class="form-group" method="POST" action="/admin/add">
        <label for="firstname">Firstname </label>
        <input class="form-control" id="firstname" name="firstname" type="text" required>

        <label for="lastname">Lastname</label>
        <input class="form-control" name="lastname" id="lastname" type="text" required>

        <label for="email">Email</label>
        <input class="form-control" name="email" id="email" type="email" placeholder="TOTO@TOTO.FR" required>

        <label for="phone">Phone</label>
        <input class="form-control" name="phone" id="phone" required type="text">

        <p>Admin : </p>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="admin" name="admin" value="oui" checked>
            <label class="form-check-label" for="admin">Oui</label>

            <input type="radio" id="admin_non" name="admin" value="non">
            <label class="form-check-label" for="admin_non">Non</label>
        </div>

        <div class="form-group">
            <label for="validated">Validation</label>
            <select class="form-control" name="validated" id="validated">
                <option value="validated">Validated</option>
                <option value="in progress">In Progress</option>
                <option value="rejected">Rejected</option>
            </select>
        </div>

        <input class="btn btn-primary" type="submit" value="Envoyer">
    </form>
